<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Socket.io simple chat</title>
  </head>
  <body>
    <div class="container">
      <div class="inbox">
        <div class="inbox__people">
          <h4>Active users</h4>
        </div>
        <button id="inc">Increment</button>
      </div>

    </div>

    <script src="https://cdn.socket.io/4.6.0/socket.io.min.js"
    integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+" crossorigin="anonymous">
</script>
    <script>
      document.addEventListener('DOMContentLoaded', (event) => {
        const socket = io () ;
        // Listening updatecount event from server  
        socket.on('updatecount',(data)=>{
            console.log(data)
        })

        let btn = document.getElementById('inc');
        
        // adding click event on button 
        btn.addEventListener('click',()=>{
          //console.log('hallo');
          socket.emit('increment')// Sending increment event to server 
        })

      
      });
    </script>

  </body>
</html>